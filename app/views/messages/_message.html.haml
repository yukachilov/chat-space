.message
  .message__upper-info
    .message__upper-info__talker
      = message.user.name
    .message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d/(%a) %H:%M")
  .message__text
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'message__text__image' if message.image.present?